@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center my-5">
	<h2 class="display-4">Welcome</h2>
	<p>Search and explore YouTube videos effortlessly.</p>
</div>

<div class="container my-5">
	<h3 class="text-center">Features</h3>
	<div class="row">
		<div class="col-md-4">
			<div class="card h-100 text-center shadow">
				<div class="card-body">
					<i class="bi bi-search" style="font-size: 2rem;"></i>
					<h5 class="card-title mt-3">Search Videos</h5>
					<p class="card-text">Easily find your favorite YouTube videos using our search tool.</p>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="card h-100 text-center shadow">
				<div class="card-body">
					<i class="bi bi-collection-play" style="font-size: 2rem;"></i>
					<h5 class="card-title mt-3">Trending Videos</h5>
					<p class="card-text">Explore the latest trending videos on YouTube.</p>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="card h-100 text-center shadow">
				<div class="card-body">
					<i class="bi bi-file-earmark-text" style="font-size: 2rem;"></i>
					<h5 class="card-title mt-3">Detailed Insights</h5>
					<p class="card-text">Get video descriptions, durations, and upload dates at a glance.</p>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="container my-5 text-center">
	<h3>How It Works</h3>
	<iframe width="560" height="315" src="https://www.youtube.com/embed/dQw4w9WgXcQ"
			title="YouTube Video Player" frameborder="0" allowfullscreen></iframe>
</div>